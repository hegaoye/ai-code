<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="TemplateFramework">

	<resultMap id="rs_base" type="TemplateFramework">
        <result property="id" column="id"/>
        <result property="frameworkCode" column="frameworkCode"/>
        <result property="templateCode" column="templateCode"/>
	</resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="TemplateFramework.columns">
		id,frameworkCode,templateCode
	</sql>

	<insert id="TemplateFramework.insert" useGeneratedKeys="true" keyProperty="id" parameterType="TemplateFramework">
        INSERT INTO `template_framework` (
        	id ,
        	frameworkCode ,
        	templateCode 
        ) VALUES (
        	#{id} ,
        	#{frameworkCode} ,
        	#{templateCode} 
        )
		<selectKey keyProperty="id" resultType="long">
			select LAST_INSERT_ID()
		</selectKey>
	</insert>

	<update id="TemplateFramework.update" parameterType="TemplateFramework">
        UPDATE `template_framework`
		<trim prefix="set" suffixOverrides=",">
			<if test="frameworkCode!=null and frameworkCode!=''">
	        frameworkCode = #{frameworkCode} ,
		    </if>
			<if test="templateCode!=null and templateCode!=''">
	        templateCode = #{templateCode} 
		    </if>
		</trim>
        WHERE
	        id = #{id} 
	</update>

    <delete id="TemplateFramework.delete">
        DELETE FROM `template_framework`
		<include refid="TemplateFramework.where"/>
    </delete>

    <select id="TemplateFramework.load" resultMap="rs_base">
		SELECT <include refid="TemplateFramework.columns" />
		    FROM `template_framework`
		<include refid="TemplateFramework.where"/>
	</select>

	<sql id="TemplateFramework.where">
		<where>
			<if test="id!=null and id!=''">
				AND id = #{id}
			</if>
			<if test="frameworkCode!=null and frameworkCode!=''">
				AND frameworkCode = #{frameworkCode}
			</if>
			<if test="templateCode!=null and templateCode!=''">
				AND templateCode = #{templateCode}
			</if>
		</where>
	</sql>



    <select id="TemplateFramework.count" resultType="long">
        SELECT count(*) FROM `template_framework`
		<include refid="TemplateFramework.where"/>
    </select>


    <select id="TemplateFramework.query" resultMap="rs_base">
    	SELECT <include refid="TemplateFramework.columns" />
	    FROM `template_framework`
		<include refid="TemplateFramework.where"/>

		<if test="sortColumns!=null and sortColumns!=''">
			ORDER BY ${sortColumns}
		</if>
    </select>


</mapper>

