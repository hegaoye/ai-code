<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="ProjectClass">

	<resultMap id="rs_base" type="ProjectClass">
        <result property="id" column="id"/>
        <result property="projectCode" column="projectCode"/>
        <result property="classCode" column="classCode"/>
	</resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="ProjectClass.columns">
		id,projectCode,classCode
	</sql>

	<insert id="ProjectClass.insert" useGeneratedKeys="true" keyProperty="id" parameterType="ProjectClass">
        INSERT INTO `project_class` (
        	id ,
        	projectCode ,
        	classCode 
        ) VALUES (
        	#{id} ,
        	#{projectCode} ,
        	#{classCode} 
        )
		<selectKey keyProperty="id" resultType="long">
			select LAST_INSERT_ID()
		</selectKey>
	</insert>

	<update id="ProjectClass.update" parameterType="ProjectClass">
        UPDATE `project_class`
		<trim prefix="set" suffixOverrides=",">
			<if test="projectCode!=null and projectCode!=''">
	        projectCode = #{projectCode} ,
		    </if>
			<if test="classCode!=null and classCode!=''">
	        classCode = #{classCode} 
		    </if>
		</trim>
        WHERE
	        id = #{id} 
	</update>

    <delete id="ProjectClass.delete">
        DELETE FROM `project_class`
		<include refid="ProjectClass.where"/>
    </delete>

    <select id="ProjectClass.load" resultMap="rs_base">
		SELECT <include refid="ProjectClass.columns" />
		    FROM `project_class`
		<include refid="ProjectClass.where"/>
	</select>

	<sql id="ProjectClass.where">
		<where>
			<if test="id!=null and id!=''">
				AND id = #{id}
			</if>
			<if test="projectCode!=null and projectCode!=''">
				AND projectCode = #{projectCode}
			</if>
			<if test="classCode!=null and classCode!=''">
				AND classCode = #{classCode}
			</if>
		</where>
	</sql>



    <select id="ProjectClass.count" resultType="long">
        SELECT count(*) FROM `project_class`
		<include refid="ProjectClass.where"/>
    </select>


    <select id="ProjectClass.query" resultMap="rs_base">
    	SELECT <include refid="ProjectClass.columns" />
	    FROM `project_class`
		<include refid="ProjectClass.where"/>

		<if test="sortColumns!=null and sortColumns!=''">
			ORDER BY ${sortColumns}
		</if>
    </select>


</mapper>

