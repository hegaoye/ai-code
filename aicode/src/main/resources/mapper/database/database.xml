<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aicode.database.dao.mapper.DatabaseMapper">


    <!--查询一个数据库的详情-->
    <select id="load" resultMap="rs_base">
       SELECT * FROM information_schema.SCHEMATA where SCHEMA_NAME=#{value}
    </select>

    <!--count一个数据库的条数-->
    <select id="count" resultType="long">
        SELECT count(1) FROM information_schema.SCHEMATA where SCHEMA_NAME=#{schemaName}
    </select>

    <!--查询所有数据库-->
    <select id="query" resultMap="rs_base">
		SELECT * FROM information_schema.SCHEMATA where SCHEMA_NAME=#{value}
    </select>

    <!--创建项目数据库-->
    <select id="createDatabase">
        ${sql}
    </select>
    <!--切换数据库-->
    <select id="useDatabase">
        use ${database}
    </select>


</mapper>
