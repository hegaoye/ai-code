<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="QrtzPausedTriggerGrps">

	<resultMap id="QrtzPausedTriggerGrps" type="QrtzPausedTriggerGrps">
        <result property="schedName" column="SCHED_NAME"/>
        <result property="triggerGroup" column="TRIGGER_GROUP"/>
	</resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="QrtzPausedTriggerGrps.columns">
	    <![CDATA[
		SCHED_NAME,TRIGGER_GROUP
	    ]]>
	</sql>

	<insert id="QrtzPausedTriggerGrps.insert" useGeneratedKeys="true" keyProperty="schedName" parameterType="QrtzPausedTriggerGrps">
        INSERT INTO qrtz_paused_trigger_grps (
        	SCHED_NAME ,
        	TRIGGER_GROUP 
        ) VALUES (
        	#{schedName} ,
        	#{triggerGroup} 
        )
		<selectKey keyProperty="id" resultType="long">
			select LAST_INSERT_ID()
		</selectKey>
	</insert>

	<update id="QrtzPausedTriggerGrps.update" parameterType="QrtzPausedTriggerGrps">
    <![CDATA[
        UPDATE qrtz_paused_trigger_grps SET
        WHERE 
	        SCHED_NAME = #{schedName}  AND 
	        TRIGGER_GROUP = #{triggerGroup} 
    ]]>
	</update>

    <delete id="QrtzPausedTriggerGrps.delete">
    <![CDATA[
        DELETE FROM qrtz_paused_trigger_grps WHERE
        SCHED_NAME = #{id}  AND 
        TRIGGER_GROUP = #{id} 
    ]]>
    </delete>

    <select id="QrtzPausedTriggerGrps.load" resultMap="QrtzPausedTriggerGrps">
		SELECT <include refid="QrtzPausedTriggerGrps.columns" />
	    <![CDATA[
		    FROM qrtz_paused_trigger_grps 
	        WHERE 
		        SCHED_NAME = #{id}  AND 
		        TRIGGER_GROUP = #{id} 
	    ]]>
	</select>

	<sql id="QrtzPausedTriggerGrps.where">
		<where>
	       <if test="@Ognl@isNotEmpty(schedName)">
				AND SCHED_NAME = #{schedName}
			</if>
	       <if test="@Ognl@isNotEmpty(triggerGroup)">
				AND TRIGGER_GROUP = #{triggerGroup}
			</if>
		</where>
	</sql>



    <select id="QrtzPausedTriggerGrps.count" resultType="long">
        SELECT count(1) FROM qrtz_paused_trigger_grps
		<include refid="QrtzPausedTriggerGrps.where"/>
    </select>


    <select id="QrtzPausedTriggerGrps.query" resultMap="QrtzPausedTriggerGrps">
    	SELECT <include refid="QrtzPausedTriggerGrps.columns" />
	    FROM qrtz_paused_trigger_grps
		<include refid="QrtzPausedTriggerGrps.where"/>

		<if test="@Ognl@isNotEmpty(sortColumns)">
			ORDER BY ${sortColumns}
		</if>
    </select>


</mapper>

