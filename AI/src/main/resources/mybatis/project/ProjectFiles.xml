<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="ProjectFiles">

    <resultMap id="rs_base" type="ProjectFiles">
        <result property="id" column="id"/>
        <result property="templateCode" column="templateCode"/>
        <result property="projectCode" column="projectCode"/>
    </resultMap>


    <!--查询表信息关联信息-->
    <resultMap id="rs_base_all" type="ProjectFiles" extends="rs_base">
        <association property="templates" column="{code=templateCode}" select="Templates.load"/>
    </resultMap>
    <!-- 用于select查询公用抽取的列 -->
    <sql id="ProjectFiles.columns">
		id,templateCode,projectCode
	</sql>

    <insert id="ProjectFiles.insert" useGeneratedKeys="true" keyProperty="id" parameterType="ProjectFiles">
        INSERT INTO `project_files` (
        id ,
        templateCode ,
        projectCode ,
        ) VALUES (
        #{id} ,
        #{templateCode} ,
        #{projectCode} ,
        )
        <selectKey keyProperty="id" resultType="long">
            select LAST_INSERT_ID()
        </selectKey>
    </insert>

    <update id="ProjectFiles.update" parameterType="ProjectFiles">
        UPDATE `project_files`
        <trim prefix="set" suffixOverrides=",">
            <if test="templateCode!=null and templateCode!=''">
                templateCode = #{templateCode} ,
            </if>
            <if test="projectCode!=null and projectCode!=''">
                projectCode = #{projectCode} ,
            </if>
        </trim>
        WHERE
        id = #{id}
    </update>

    <delete id="ProjectFiles.delete">
        DELETE FROM `project_files`
        <include refid="ProjectFiles.where"/>
    </delete>

    <select id="ProjectFiles.load" resultMap="rs_base_all">
        SELECT
        <include refid="ProjectFiles.columns"/>
        FROM `project_files`
        <include refid="ProjectFiles.where"/>
    </select>

    <sql id="ProjectFiles.where">
        <where>
            <if test="id!=null and id!=''">
                AND id = #{id}
            </if>
            <if test="templateCode!=null and templateCode!=''">
                AND templateCode = #{templateCode}
            </if>
            <if test="projectCode!=null and projectCode!=''">
                AND projectCode = #{projectCode}
            </if>
        </where>
    </sql>


    <select id="ProjectFiles.count" resultType="long">
        SELECT count(*) FROM `project_files`
        <include refid="ProjectFiles.where"/>
    </select>


    <select id="ProjectFiles.query" resultMap="rs_base_all">
        SELECT
        <include refid="ProjectFiles.columns"/>
        FROM `project_files`
        <include refid="ProjectFiles.where"/>

        <if test="sortColumns!=null and sortColumns!=''">
            ORDER BY ${sortColumns}
        </if>
    </select>


</mapper>

