<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="BuildToolsPath">

	<resultMap id="rs_base" type="BuildToolsPath">
        <result property="id" column="id"/>
        <result property="buildCode" column="buildCode"/>
        <result property="code" column="code"/>
        <result property="buildPath" column="buildPath"/>
        <result property="pathType" column="pathType"/>
	</resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="BuildToolsPath.columns">
		id,buildCode,code,buildPath,pathType
	</sql>

	<insert id="BuildToolsPath.insert" useGeneratedKeys="true" keyProperty="id" parameterType="BuildToolsPath">
        INSERT INTO `build_tools_path` (
        	id ,
        	buildCode ,
        	code ,
        	buildPath ,
        	pathType 
        ) VALUES (
        	#{id} ,
        	#{buildCode} ,
        	#{code} ,
        	#{buildPath} ,
        	#{pathType} 
        )
		<selectKey keyProperty="id" resultType="long">
			select LAST_INSERT_ID()
		</selectKey>
	</insert>

	<update id="BuildToolsPath.update" parameterType="BuildToolsPath">
        UPDATE `build_tools_path`
		<trim prefix="set" suffixOverrides=",">
			<if test="buildPath!=null and buildPath!=''">
	        buildPath = #{buildPath} ,
		    </if>
			<if test="pathType!=null and pathType!=''">
	        pathType = #{pathType} 
		    </if>
		</trim>
        WHERE
	        id = #{id}  AND 
	        buildCode = #{buildCode}  AND 
	        code = #{code} 
	</update>

    <delete id="BuildToolsPath.delete">
        DELETE FROM `build_tools_path`
		<include refid="BuildToolsPath.where"/>
    </delete>

    <select id="BuildToolsPath.load" resultMap="rs_base">
		SELECT <include refid="BuildToolsPath.columns" />
		    FROM `build_tools_path`
		<include refid="BuildToolsPath.where"/>
	</select>

	<sql id="BuildToolsPath.where">
		<where>
			<if test="id!=null and id!=''">
				AND id = #{id}
			</if>
			<if test="buildCode!=null and buildCode!=''">
				AND buildCode = #{buildCode}
			</if>
			<if test="code!=null and code!=''">
				AND code = #{code}
			</if>
			<if test="buildPath!=null and buildPath!=''">
				AND buildPath = #{buildPath}
			</if>
			<if test="pathType!=null and pathType!=''">
				AND pathType = #{pathType}
			</if>
		</where>
	</sql>



    <select id="BuildToolsPath.count" resultType="long">
        SELECT count(*) FROM `build_tools_path`
		<include refid="BuildToolsPath.where"/>
    </select>


    <select id="BuildToolsPath.query" resultMap="rs_base">
    	SELECT <include refid="BuildToolsPath.columns" />
	    FROM `build_tools_path`
		<include refid="BuildToolsPath.where"/>

		<if test="sortColumns!=null and sortColumns!=''">
			ORDER BY ${sortColumns}
		</if>
    </select>


</mapper>

