<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="Templates">

    <resultMap id="rs_base" type="Templates">
        <result property="id" column="id"/>
        <result property="tempalteCategoryCode" column="tempalteCategoryCode"/>
        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="path" column="path"/>
        <result property="state" column="state"/>
        <result property="fileType" column="fileType"/>
        <result property="model" column="model"/>
    </resultMap>

    <!-- 用于select查询公用抽取的列 -->
    <sql id="Templates.columns">
		id,tempalteCategoryCode,code,name,description,path,state,fileType,model
	</sql>

    <insert id="Templates.insert" useGeneratedKeys="true" keyProperty="id" parameterType="Templates">
        INSERT INTO `templates` (
        id ,
        tempalteCategoryCode ,
        code ,
        name ,
        description ,
        path ,
        state,
        fileType,
        model
        ) VALUES (
        #{id} ,
        #{tempalteCategoryCode} ,
        #{code} ,
        #{name} ,
        #{description} ,
        #{path} ,
        #{state} ,
        #{fileType},
        #{model}
        )
        <selectKey keyProperty="id" resultType="long">
            select LAST_INSERT_ID()
        </selectKey>
    </insert>

    <update id="Templates.update" parameterType="Templates">
        UPDATE `templates`
        <trim prefix="set" suffixOverrides=",">
            <if test="name!=null and name!=''">
                name = #{name} ,
            </if>
            <if test="tempalteCategoryCode!=null and tempalteCategoryCode!=''">
                tempalteCategoryCode = #{tempalteCategoryCode} ,
            </if>
            <if test="description!=null and description!=''">
                description = #{description} ,
            </if>
            <if test="path!=null and path!=''">
                path = #{path} ,
            </if>
            <if test="state!=null and state!=''">
                state = #{state}
            </if>
            <if test="fileType!=null and fileType!=''">
                fileType = #{fileType}
            </if>
            <if test="model!=null and model!=''">
                model = #{model}
            </if>
        </trim>
        WHERE
        code = #{code}
    </update>

    <delete id="Templates.delete">
        DELETE FROM `templates`
        <include refid="Templates.where"/>
    </delete>

    <select id="Templates.load" resultMap="rs_base">
        SELECT
        <include refid="Templates.columns"/>
        FROM `templates`
        <include refid="Templates.where"/>
    </select>

    <sql id="Templates.where">
        <where>
            <if test="id!=null and id!=''">
                AND id = #{id}
            </if>
            <if test="tempalteCategoryCode!=null and tempalteCategoryCode!=''">
                AND tempalteCategoryCode = #{tempalteCategoryCode}
            </if>
            <if test="code!=null and code!=''">
                AND code = #{code}
            </if>
            <if test="name!=null and name!=''">
                AND name = #{name}
            </if>
            <if test="description!=null and description!=''">
                AND description = #{description}
            </if>
            <if test="path!=null and path!=''">
                AND path = #{path}
            </if>
            <if test="state!=null and state!=''">
                AND state = #{state}
            </if>
            <if test="fileType!=null and fileType!=''">
                AND fileType = #{fileType}
            </if>
            <if test="model!=null and model!=''">
                AND model = #{model}
            </if>
        </where>
    </sql>


    <select id="Templates.count" resultType="long">
        SELECT count(*) FROM `templates`
        <include refid="Templates.where"/>
    </select>


    <select id="Templates.query" resultMap="rs_base">
        SELECT
        <include refid="Templates.columns"/>
        FROM `templates`
        <include refid="Templates.where"/>

        <if test="sortColumns!=null and sortColumns!=''">
            ORDER BY ${sortColumns}
        </if>
    </select>


</mapper>

