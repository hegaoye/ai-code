<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="TableRelationship">

	<resultMap id="rs_base" type="TableRelationship">
        <result property="id" column="id"/>
        <result property="code" column="code"/>
        <result property="tableCode" column="tableCode"/>
        <result property="relationship" column="relationship"/>
	</resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="TableRelationship.columns">
		id,code,tableCode,relationship
	</sql>

	<insert id="TableRelationship.insert" useGeneratedKeys="true" keyProperty="id" parameterType="TableRelationship">
        INSERT INTO `table_relationship` (
        	id ,
        	code ,
        	tableCode ,
        	relationship 
        ) VALUES (
        	#{id} ,
        	#{code} ,
        	#{tableCode} ,
        	#{relationship} 
        )
		<selectKey keyProperty="id" resultType="long">
			select LAST_INSERT_ID()
		</selectKey>
	</insert>

	<update id="TableRelationship.update" parameterType="TableRelationship">
        UPDATE `table_relationship`
		<trim prefix="set" suffixOverrides=",">
			<if test="tableCode!=null and tableCode!=''">
	        tableCode = #{tableCode} ,
		    </if>
			<if test="relationship!=null and relationship!=''">
	        relationship = #{relationship} 
		    </if>
		</trim>
        WHERE
	        id = #{id}  AND 
	        code = #{code} 
	</update>

    <delete id="TableRelationship.delete">
        DELETE FROM `table_relationship`
		<include refid="TableRelationship.where"/>
    </delete>

    <select id="TableRelationship.load" resultMap="rs_base">
		SELECT <include refid="TableRelationship.columns" />
		    FROM `table_relationship`
		<include refid="TableRelationship.where"/>
	</select>

	<sql id="TableRelationship.where">
		<where>
			<if test="id!=null and id!=''">
				AND id = #{id}
			</if>
			<if test="code!=null and code!=''">
				AND code = #{code}
			</if>
			<if test="tableCode!=null and tableCode!=''">
				AND tableCode = #{tableCode}
			</if>
			<if test="relationship!=null and relationship!=''">
				AND relationship = #{relationship}
			</if>
		</where>
	</sql>



    <select id="TableRelationship.count" resultType="long">
        SELECT count(*) FROM `table_relationship`
		<include refid="TableRelationship.where"/>
    </select>


    <select id="TableRelationship.query" resultMap="rs_base">
    	SELECT <include refid="TableRelationship.columns" />
	    FROM `table_relationship`
		<include refid="TableRelationship.where"/>

		<if test="sortColumns!=null and sortColumns!=''">
			ORDER BY ${sortColumns}
		</if>
    </select>


</mapper>

