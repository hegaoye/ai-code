<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="ToolsCategory">

	<resultMap id="rs_base" type="ToolsCategory">
        <result property="id" column="id"/>
        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="state" column="state"/>
	</resultMap>

	<!--查询表信息关联信息-->
	<resultMap id="rs_base_all" type="ToolsCategory" extends="rs_base">
		<collection property="toolsList" column="{toolsCategoryCode=code}" select="Tools.query"/>
	</resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="ToolsCategory.columns">
		id,code,name,description,state
	</sql>

	<insert id="ToolsCategory.insert" useGeneratedKeys="true" keyProperty="id" parameterType="ToolsCategory">
        INSERT INTO `tools_category` (
        	id ,
        	code ,
        	name ,
        	description ,
        	state 
        ) VALUES (
        	#{id} ,
        	#{code} ,
        	#{name} ,
        	#{description} ,
        	#{state} 
        )
		<selectKey keyProperty="id" resultType="long">
			select LAST_INSERT_ID()
		</selectKey>
	</insert>

	<update id="ToolsCategory.update" parameterType="ToolsCategory">
        UPDATE `tools_category`
		<trim prefix="set" suffixOverrides=",">
			<if test="name!=null and name!=''">
	        name = #{name} ,
		    </if>
			<if test="description!=null and description!=''">
	        description = #{description} ,
		    </if>
			<if test="state!=null and state!=''">
	        state = #{state} 
		    </if>
		</trim>
        WHERE
	        id = #{id}  AND 
	        code = #{code} 
	</update>

    <delete id="ToolsCategory.delete">
        DELETE FROM `tools_category`
		<include refid="ToolsCategory.where"/>
    </delete>

    <select id="ToolsCategory.load" resultMap="rs_base_all">
		SELECT <include refid="ToolsCategory.columns" />
		    FROM `tools_category`
		<include refid="ToolsCategory.where"/>
	</select>

	<sql id="ToolsCategory.where">
		<where>
			<if test="id!=null and id!=''">
				AND id = #{id}
			</if>
			<if test="code!=null and code!=''">
				AND code = #{code}
			</if>
			<if test="name!=null and name!=''">
				AND name = #{name}
			</if>
			<if test="description!=null and description!=''">
				AND description = #{description}
			</if>
			<if test="state!=null and state!=''">
				AND state = #{state}
			</if>
		</where>
	</sql>



    <select id="ToolsCategory.count" resultType="long">
        SELECT count(*) FROM `tools_category`
		<include refid="ToolsCategory.where"/>
    </select>


    <select id="ToolsCategory.query" resultMap="rs_base_all">
    	SELECT <include refid="ToolsCategory.columns" />
	    FROM `tools_category`
		<include refid="ToolsCategory.where"/>

		<if test="sortColumns!=null and sortColumns!=''">
			ORDER BY ${sortColumns}
		</if>
    </select>


</mapper>

