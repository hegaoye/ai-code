<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="TempalteCategory">

	<resultMap id="rs_base" type="TempalteCategory">
        <result property="id" column="id"/>
        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
	</resultMap>

	<!--查询表信息关联信息-->
	<resultMap id="rs_base_all" type="TempalteCategory" extends="rs_base">
		<collection property="templatesList" column="{tempalteCategorycode=code}" select="Templates.query"/>
	</resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="TempalteCategory.columns">
		id,code,name,description
	</sql>

	<insert id="TempalteCategory.insert" useGeneratedKeys="true" keyProperty="id" parameterType="TempalteCategory">
        INSERT INTO `tempalte_category` (
        	id ,
        	code ,
        	name ,
        	description
        ) VALUES (
        	#{id} ,
        	#{code} ,
        	#{name} ,
        	#{description}
        )
		<selectKey keyProperty="id" resultType="long">
			select LAST_INSERT_ID()
		</selectKey>
	</insert>

	<update id="TempalteCategory.update" parameterType="TempalteCategory">
        UPDATE `tempalte_category`
		<trim prefix="set" suffixOverrides=",">
			<if test="name!=null and name!=''">
	        name = #{name} ,
		    </if>
			<if test="description!=null and description!=''">
	        description = #{description}
		    </if>
		</trim>
        WHERE
	        id = #{id}  AND
	        code = #{code}
	</update>

    <delete id="TempalteCategory.delete">
        DELETE FROM `tempalte_category`
		<include refid="TempalteCategory.where"/>
    </delete>

    <select id="TempalteCategory.load" resultMap="rs_base_all">
		SELECT <include refid="TempalteCategory.columns" />
		    FROM `tempalte_category`
		<include refid="TempalteCategory.where"/>
	</select>

	<sql id="TempalteCategory.where">
		<where>
			<if test="id!=null and id!=''">
				AND id = #{id}
			</if>
			<if test="code!=null and code!=''">
				AND code = #{code}
			</if>
			<if test="name!=null and name!=''">
				AND name = #{name}
			</if>
			<if test="description!=null and description!=''">
				AND description = #{description}
			</if>
		</where>
	</sql>



    <select id="TempalteCategory.count" resultType="long">
        SELECT count(*) FROM `tempalte_category`
		<include refid="TempalteCategory.where"/>
    </select>


    <select id="TempalteCategory.query" resultMap="rs_base_all">
    	SELECT <include refid="TempalteCategory.columns" />
	    FROM `tempalte_category`
		<include refid="TempalteCategory.where"/>

		<if test="sortColumns!=null and sortColumns!=''">
			ORDER BY ${sortColumns}
		</if>
    </select>


</mapper>

