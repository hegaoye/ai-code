<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="ClassroomTutor">

    <resultMap id="rs_base" type="ClassroomTutor">
        <result property="id" column="id"/>
        <result property="classroomCode" column="classroomCode"/>
        <result property="tutorCode" column="tutorCode"/>
        <result property="tutorName" column="tutorName"/>
        <result property="tutorEmail" column="tutorEmail"/>
        <result property="timeZone" column="timeZone"/>
        <result property="state" column="state"/>
    </resultMap>

    <resultMap id="rs_base_all" type="ClassroomTutor" extends="rs_base">
        <association property="tutor" column="{tutorCode=tutorCode}" select="Tutor.load"/>
    </resultMap>

    <resultMap id="rs_base_classroomTutorTotal" type="ClassroomTutor">
        <result property="classroomTutorTotal" column="classroomTutorTotal"/>
    </resultMap>


    <!-- 用于select查询公用抽取的列 -->
    <sql id="ClassroomTutor.columns">
		id,classroomCode,tutorCode,tutorName,tutorEmail,timeZone,state
	</sql>

    <insert id="ClassroomTutor.insert" useGeneratedKeys="true" keyProperty="id" parameterType="ClassroomTutor">
        INSERT INTO `classroom_tutor` (
        id ,
        classroomCode ,
        tutorCode ,
        tutorName ,
        tutorEmail ,
        timeZone ,
        state
        ) VALUES (
        #{id} ,
        #{classroomCode} ,
        #{tutorCode} ,
        #{tutorName} ,
        #{tutorEmail} ,
        #{timeZone} ,
        #{state}
        )
        <selectKey keyProperty="id" resultType="long">
            select LAST_INSERT_ID()
        </selectKey>
    </insert>

    <update id="ClassroomTutor.update" parameterType="ClassroomTutor">
        UPDATE `classroom_tutor`
        <trim prefix="set" suffixOverrides=",">
            <if test="tutorCode!=null and tutorCode!=''">
                tutorCode = #{tutorCode} ,
            </if>
            <if test="tutorName!=null and tutorName!=''">
                tutorName = #{tutorName} ,
            </if>
            <if test="tutorEmail!=null and tutorEmail!=''">
                tutorEmail = #{tutorEmail} ,
            </if>
            <if test="timeZone!=null and timeZone!=''">
                timeZone = #{timeZone} ,
            </if>
            <if test="state!=null and state!=''">
                state = #{state}
            </if>
        </trim>
        WHERE
        classroomCode = #{classroomCode}
        AND
        tutorCode = #{tutorCode}
    </update>

    <delete id="ClassroomTutor.delete">
        DELETE FROM `classroom_tutor`
        WHERE
        classroomCode = #{classroomCode}
        AND
        tutorCode = #{tutorCode}
    </delete>

    <select id="ClassroomTutor.load" resultMap="rs_base_all">
        SELECT
        <include refid="ClassroomTutor.columns"/>
        FROM `classroom_tutor`
        <include refid="ClassroomTutor.where"/>
    </select>

    <!--查询教师所有课堂-->
    <select id="ClassroomTutor.classroomTutors" resultMap="rs_base">
        SELECT ct.*
        FROM `classroom_tutor` ct, Classroom c
        WHERE
        c.classroomCode=ct.classroomCode AND  c.state=#{classroomState}  AND ct.tutorCode = #{tutorCode}
        ORDER  BY  #{sortColumns}
    </select>


    <sql id="ClassroomTutor.where">
        <where>
            <if test="id!=null and id!=''">
                AND id = #{id}
            </if>
            <if test="classroomCode!=null and classroomCode!=''">
                AND classroomCode = #{classroomCode}
            </if>
            <if test="tutorCode!=null and tutorCode!=''">
                AND tutorCode = #{tutorCode}
            </if>
            <if test="tutorName!=null and tutorName!=''">
                AND tutorName = #{tutorName}
            </if>
            <if test="tutorEmail!=null and tutorEmail!=''">
                AND tutorEmail = #{tutorEmail}
            </if>
            <if test="timeZone!=null and timeZone!=''">
                AND timeZone = #{timeZone}
            </if>
            <if test="state!=null and state!=''">
                AND state = #{state}
            </if>
        </where>
    </sql>


    <select id="ClassroomTutor.count" resultType="long">
        SELECT count(1) FROM `classroom_tutor`
        <include refid="ClassroomTutor.where"/>
    </select>

    <select id="ClassroomTutor.countClassroomTotal" resultMap="rs_base_classroomTutorTotal">
        SELECT count(1) as classroomTutorTotal FROM `classroom_tutor`
        <include refid="ClassroomTutor.where"/>
    </select>


    <select id="ClassroomTutor.query" resultMap="rs_base_all">
        SELECT
        <include refid="ClassroomTutor.columns"/>
        FROM `classroom_tutor`
        <include refid="ClassroomTutor.where"/>

        <if test="sortColumns!=null and sortColumns!=''">
            ORDER BY ${sortColumns}
        </if>
    </select>
</mapper>

