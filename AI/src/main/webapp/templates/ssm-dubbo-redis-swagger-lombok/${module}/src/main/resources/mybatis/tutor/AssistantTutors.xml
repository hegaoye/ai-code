<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="AssistantTutors">

    <resultMap id="rs_base" type="AssistantTutors">
        <result property="id" column="id"/>
        <result property="tutorCode" column="tutorCode"/>
        <result property="assistantCode" column="assistantCode"/>
        <result property="state" column="state"/>
        <result property="createTime" column="createTime"/>
        <result property="updateTime" column="updateTime"/>
    </resultMap>

    <!--所有信息-->
    <resultMap id="rs_base_all" type="AssistantTutors" extends="rs_base">
        <association property="tutor" column="tutorCode" select="Tutor.loadTutorCode"/>
    </resultMap>

    <!-- 用于select查询公用抽取的列 -->
    <sql id="AssistantTutors.columns">
		id,tutorCode,assistantCode,state,createTime,updateTime
	</sql>

    <insert id="AssistantTutors.insert" useGeneratedKeys="true" keyProperty="id" parameterType="AssistantTutors">
        INSERT INTO assistant_tutors (
        id ,
        tutorCode ,
        assistantCode ,
        state ,
        createTime ,
        updateTime
        ) VALUES (
        #{id} ,
        #{tutorCode} ,
        #{assistantCode} ,
        #{state} ,
        #{createTime} ,
        #{updateTime}
        )
        <selectKey keyProperty="id" resultType="long">
            select LAST_INSERT_ID()
        </selectKey>
    </insert>

    <update id="AssistantTutors.update" parameterType="AssistantTutors">
        UPDATE assistant_tutors
        <set>
            <if test="state!=null and state!=''">
                state = #{state} ,
            </if>
            <if test="updateTime!=null ">
                updateTime = #{updateTime}
            </if>
        </set>

        <where>
            <if test="tutorCode!=null and tutorCode!=''">
                AND tutorCode = #{tutorCode}
            </if>
            <if test="assistantCode!=null and assistantCode!=''">
                AND assistantCode = #{assistantCode}
            </if>
        </where>


    </update>

    <delete id="AssistantTutors.delete">
        DELETE FROM assistant_tutors WHERE
        id = #{id} 
    </delete>

    <select id="AssistantTutors.load" resultMap="rs_base">
        SELECT
        <include refid="AssistantTutors.columns"/>
        FROM assistant_tutors
        <include refid="AssistantTutors.where"/>

    </select>

    <sql id="AssistantTutors.where">
        <where>
            <if test="id!=null and id!=''">
                AND id = #{id}
            </if>
            <if test="tutorCode!=null and tutorCode!=''">
                AND tutorCode = #{tutorCode}
            </if>
            <if test="assistantCode!=null and assistantCode!=''">
                AND assistantCode = #{assistantCode}
            </if>
            <if test="state!=null and state!=''">
                AND state = #{state}
            </if>
            <if test="createTimeBegin!=null ">
                AND createTime >= #{createTimeBegin}
            </if>
            <if test="createTimeEnd!=null ">
                AND createTime &lt;= #{createTimeEnd}
            </if>
            <if test="updateTimeBegin!=null ">
                AND updateTime >= #{updateTimeBegin}
            </if>
            <if test="updateTimeEnd!=null ">
                AND updateTime &lt;= #{updateTimeEnd}
            </if>
        </where>
    </sql>


    <select id="AssistantTutors.count" resultType="int">
        SELECT count(1) FROM assistant_tutors
        <include refid="AssistantTutors.where"/>
    </select>


    <select id="AssistantTutors.query" resultMap="rs_base_all">
        SELECT
        <include refid="AssistantTutors.columns"/>
        FROM assistant_tutors
        <include refid="AssistantTutors.where"/>

        <if test="sortColumns!=null and sortColumns!=''">
            ORDER BY ${sortColumns}
        </if>
    </select>

</mapper>

