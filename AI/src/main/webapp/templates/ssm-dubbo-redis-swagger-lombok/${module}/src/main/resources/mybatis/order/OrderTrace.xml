<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="OrderTrace">

    <resultMap id="rs_base" type="OrderTrace">
        <result property="id" column="id"/>
        <result property="orderNo" column="orderNo"/>
        <result property="event" column="event"/>
        <result property="summary" column="summary"/>
        <result property="orderState" column="orderState"/>
        <result property="optCode" column="optCode"/>
        <result property="optName" column="optName"/>
        <result property="createTime" column="createTime"/>
    </resultMap>

    <!-- 用于select查询公用抽取的列 -->
    <sql id="OrderTrace.columns">
	    <![CDATA[




		id,orderNo,event,summary,orderState,optCode,optName,createTime




        ]]>
	</sql>

    <insert id="OrderTrace.insert" useGeneratedKeys="true" keyProperty="id" parameterType="OrderTrace">
        INSERT INTO order_trace (
        id ,
        orderNo ,
        event ,
        summary ,
        orderState ,
        optCode ,
        optName ,
        createTime
        ) VALUES (
        #{id} ,
        #{orderNo} ,
        #{event} ,
        #{summary} ,
        #{orderState} ,
        #{optCode} ,
        #{optName} ,
        #{createTime}
        )
        <selectKey keyProperty="id" resultType="long">
            select LAST_INSERT_ID()
        </selectKey>
    </insert>

    <update id="OrderTrace.update" parameterType="OrderTrace">
    <![CDATA[




        UPDATE order_trace SET
	        orderNo = #{orderNo} ,
	        event = #{event} ,
	        summary = #{summary} ,
	        orderState = #{orderState} ,
	        optCode = #{optCode} ,
	        optName = #{optName} ,
	        createTime = #{createTime} 
        WHERE 
	        id = #{id} 




        ]]>
	</update>

    <delete id="OrderTrace.delete">
    <![CDATA[




        DELETE FROM order_trace WHERE
        id = #{id} 




        ]]>
    </delete>

    <select id="OrderTrace.load" resultMap="rs_base">
        SELECT
        <include refid="OrderTrace.columns"/>
        <![CDATA[
		    FROM order_trace 
	        WHERE 
		        id = #{id} 
	    ]]>
    </select>

    <sql id="OrderTrace.where">
        <where>
            <if test="id!=null and id!=''">
                AND id = #{id}
            </if>
            <if test="orderNo!=null and orderNo!=''">
                AND orderNo = #{orderNo}
            </if>
            <if test="event!=null and event!=''">
                AND event = #{event}
            </if>
            <if test="summary!=null and summary!=''">
                AND summary = #{summary}
            </if>
            <if test="orderState!=null and orderState!=''">
                AND orderState = #{orderState}
            </if>
            <if test="optCode!=null and optCode!=''">
                AND optCode = #{optCode}
            </if>
            <if test="optName!=null and optName!=''">
                AND optName = #{optName}
            </if>
            <if test="createTimeBegin!=null ">
                AND createTime >= #{createTimeBegin}
            </if>
            <if test="createTimeEnd!=null ">
                AND createTime &lt;= #{createTimeEnd}
            </if>
        </where>
    </sql>


    <select id="OrderTrace.count" resultType="int">
        SELECT count(1) FROM order_trace
        <include refid="OrderTrace.where"/>
    </select>


    <select id="OrderTrace.query" resultMap="rs_base">
        SELECT
        <include refid="OrderTrace.columns"/>
        FROM order_trace
        <include refid="OrderTrace.where"/>
        ORDER BY createTime DESC
    </select>


</mapper>

